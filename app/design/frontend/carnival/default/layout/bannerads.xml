  <default>
    <!-- update layout for all frontend page -->
    <reference name="head">
			<action method="addItem" ifconfig="bannerads/general/include_js"><type>skin_js</type><name>magebuzz/banners/js/jquery.min.js</name></action>
			<action method="addItem" ifconfig="bannerads/general/include_js"><type>skin_js</type><name>magebuzz/banners/js/jquery.noconflict.js</name></action>
