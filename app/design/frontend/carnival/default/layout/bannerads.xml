			<action method="addItem" ifconfig="bannerads/general/enable"><type>skin_js</type><name>magebuzz/banners/js/jquery.bxslider.js</name></action>
			<action method="addItem" ifconfig="bannerads/general/enable"><type>skin_js</type><name>magebuzz/banners/js/smartbanner.js</name></action>
      <action method="addCss" ifconfig="bannerads/general/enable"><stylesheet>magebuzz/banners/css/banners.css</stylesheet></action>
      <action method="addCss" ifconfig="bannerads/general/enable"><stylesheet>magebuzz/banners/css/bx.slider.css</stylesheet></action>
      <action method="addCss" ifconfig="bannerads/general/enable"><stylesheet>magebuzz/banners/css/smartbanner.css</stylesheet></action>
    </reference>
    <reference name="right">
      <block type="bannerads/bannerads" name="sidebar.right.top" before="-">
