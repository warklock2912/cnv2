            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    jQuery( ".search_by_email" ).click(function() {
        AmAjaxLoginObj.showAnimation();
        jQuery('.error-search-email').hide();
        var email_search = jQuery('.member-search-email').val();
        // alert(email_search);
        jQuery.ajax({
          'url' : '/member/search/check_email',
          'dataType':'json',
          'type':'post',
          'data':{'email_search':email_search},
          success:function(data){
            if(data == 1){
                window.location.href = '/member/info/show';
            }else{
                jQuery('.error-search-email').show().delay(5000).fadeOut();
            }
            AmAjaxLoginObj.hideAnimation();
          }
        });
    });
    jQuery( ".search_by_member_id" ).click(function() {
        AmAjaxLoginObj.showAnimation();
        jQuery('.error-search-m-id').hide();
        var mid_search = jQuery('.member-search-member-id').val();
        // alert(mid_search);
        jQuery.ajax({
          'url' : '/member/search/check_member_id',
          'dataType':'json',
          'type':'post',
          'data':{'mid_search':mid_search},
          success:function(data){
