
<div class="member-page">
    <div class="back-link">
        <a class="back-action" href="/member"><span><?php echo $this->__('Back')?></span></a>
    </div>
    <div class="content">
        <form id="search-member" action='#'>
            <!-- <div class="input-box search-phone">
                <input type="text" placeholder="Search Phone" class="input-text">
                <button class="btn action-search"><span><?php echo $this->__('Search')?></span></button>
            </div> -->
            <div class="input-box search-email">
                <input type="text" placeholder="Search Email" class="input-text member-search-email">
                <div class="btn action-search search_by_email" style="cursor: pointer"><span><?php echo $this->__('Search')?></span></div>
