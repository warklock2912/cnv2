          'data':{'moblie_search':mobile_s},
          success:function(data){
            if(data == 1){
                window.location.href = '/member/info/show';
            }else{
                jQuery('.error-search-mobile').show().delay(5000).fadeOut();
            }
            AmAjaxLoginObj.hideAnimation();
          }
        });
    });
</script>