                    <?php echo $this->__('%d Review(s)', $this->getReviewsCount()) ?>
                </p>
            </div>
        <?php endif; ?>

        <div class="price-box" itemscope="" itemtype="<?php echo $this->getOfferSchema()?>" itemprop="offers">
            <p class="minimal-price">
                <span class="price-label"><?php echo $this->__('Minimal Price:')?></span>
                <span class="price">
                    <span itemprop="priceCurrency" content="<?php echo $_currency = Mage::app()->getStore()->getCurrentCurrencyCode(); ?>"><?php echo Mage::app()->getLocale()->currency($_currency)->getSymbol(); ?></span><span itemprop="lowPrice"><?php echo $this->getMinimalPrice()?></span>
                </span>
            </p>
        </div>
    </div>
