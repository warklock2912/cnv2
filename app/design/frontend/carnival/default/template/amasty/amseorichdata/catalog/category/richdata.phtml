<div class="block block-list block-amseorichdata" itemscope="" itemtype="<?php echo $this->getProductSchema()?>">
    <div class="block-title">
        <strong><span itemprop="name"><?php echo $this->getName()?></span></strong>
    </div>
    <div class="block-content">
        <?php if ($this->getReviewsCount()): ?>
            <div class="ratings" itemscope="" itemprop="aggregateRating" itemtype="<?php echo $this->getReviewsSchema() ?>">
