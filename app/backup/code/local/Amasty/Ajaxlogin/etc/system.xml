<config>
    <sections>
        <amajaxlogin translate="label" module="amajaxlogin">
            <label>Ajax Login</label>
            <tab>amasty</tab>
            <frontend_type>text</frontend_type>
            <sort_order>11012</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label comment">
                            <label>Enable Ajax Login</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable>
                        <redirect translate="label">
                            <label>Use Redirect After Login(out)</label>
                             <comment><![CDATA[
                                    <script type="text/javascript">
                                        checkEnable = function() {
                                            if ($('amajaxlogin_general_redirect').getValue() == 0) {
                                                $('row_amajaxlogin_general_redirect_url').hide();
                                            }
                                            else{
                                                $('row_amajaxlogin_general_redirect_url').show();
                                            }
                                        } 
                                        Event.observe(window, 'load', function() {
                                            Event.observe('amajaxlogin_general_redirect', 'change', checkEnable);
                                            checkEnable();
                                        })
                                    </script>
                                ]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </redirect>
                        <redirect_url translate="label comment">
                            <label>Redirect Url</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </redirect_url>
			<enable_jquery translate="label comment">
                            <label>Enable jQuery</label>
                            <comment>If you have javascript errors at your frontend page, try to disable our jQuery file.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
