<config>
    <sections>
        <amseoreviews translate="label" module="amseoreviews">
            <label>SEO Reviews</label>
            <tab>amasty</tab>
            <frontend_type>text</frontend_type>
            <sort_order>190518</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <expanded>1</expanded>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <redirect_to_product translate="label">
                            <label>Redirect `Single Review Page` to `Product Page`</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </redirect_to_product>
                    </fields>
                </general>
                <additional>
                    <label>Additional</label>
                    <expanded>0</expanded>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <add_reviews_to_product translate="label">
                            <label>Add Reviews To Product Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Set `No` only in case the product page already has the reviews block]]></comment>
                        </add_reviews_to_product>
                        <reviews_list_hash translate="label">
                            <label>Hash value for container with reviews list</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Please specify without #]]></comment>
                        </reviews_list_hash>
                        <review_form_hash translate="label">
                            <label>Hash value for container with review form</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Please specify without #]]></comment>
                        </review_form_hash>
                    </fields>
                </additional>
            </groups>
        </amseoreviews>
    </sections>
</config>
