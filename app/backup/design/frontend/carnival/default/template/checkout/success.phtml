<div class="checkout-success-page">
  <div>
    <div>
      <h1><?php echo $this->__('Your order has been received.') ?></h1>
      <?php echo $this->getMessagesBlock()->toHtml() ?>
      <p>
        <?php echo $this->__('Thank you for your purchase!') ?>
        <?php if ($this->getOrderId()):?>
          <?php if ($this->getCanViewOrder()) :?>
            <?php echo $this->__('Your order # is: %s.', sprintf('<a href="%s">%s</a>', $this->escapeHtml($this->getViewOrderUrl()), $this->escapeHtml($this->getOrderId()))) ?>
          <?php  else :?>
            <?php echo $this->__('Your order # is: %s.', $this->escapeHtml($this->getOrderId())) ?>
          <?php endif;?>
        <?php endif;?>
      </p>
      <?php if ($this->getOrderId()):?>
        <p><?php echo $this->__('You will receive an order confirmation email with details of your order and a link to track its progress.') ?></p>
      <?php endif;?>
      <?php if ($this->getAgreementRefId()): ?>
          <p><?php echo $this->__('Your billing agreement # is: %s.', sprintf('<a href="%s">%s</a>', $this->escapeHtml($this->getAgreementUrl()), $this->escapeHtml($this->getAgreementRefId())))?></p>
      <?php endif;?>
      <div class="buttons-box">
          <button type="button" class="button" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Continue Shopping')) ?>" onclick="window.location='<?php echo $this->getUrl() ?>'"><span><span><?php echo $this->__('Continue Shopping') ?></span></span></button>
      </div>
    </div>
  </div>
</div>
