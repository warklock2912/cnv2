<?php if (($this->getCheckout()->getStepData('billing', 'complete')) || ($this->getCheckout()->getStepData('shipping', 'complete'))): ?>
<dt class="complete">
    <?php echo $this->__('Address') ?>
    <a class="changelink" href="javascript:;" onclick="step_click('login')"><?php echo $this->__('Change') ?></a>
</dt>
<dd class="complete">
  <?php if ($this->getCheckout()->getStepData('shipping', 'complete')):?>
    <div>
      <label><?php echo $this->__('Shipping:') ?></label>
      <address><?php echo $this->getShipping()->format('html') ?></address>
    </div>
  <?php endif; ?> 
  <?php if ($this->getCheckout()->getStepData('billing', 'complete')):?>
    <div>
      <label><?php echo $this->__('billing:') ?></label>
      <address><?php echo $this->getBilling()->format('html') ?></address>
    </div>
  <?php endif; ?>
</dd>
<?php else: ?>
<dt>
    <?php echo $this->__('Address') ?>
</dt>
<?php endif; ?>
