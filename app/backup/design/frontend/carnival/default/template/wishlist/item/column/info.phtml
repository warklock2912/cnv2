/* @var Mage_Wishlist_Model_Item $item */
$item = $this->getItem();
$product = $item->getProduct();
?>
<div class="product-info">
  <div class="info-left">
    <?php
      if ($product->getData('brands')):
      $brandName = $product->getResource()->getAttribute('brands')->getFrontend()->getValue($product);
    ?>
      <div class="product-brand"><?php echo $brandName; ?></div>
    <?php endif; ?>

    <h2 class="product-name">
      <a href="<?php echo $this->getProductUrl($item) ?>" title="<?php echo $this->escapeHtml($product->getName()) ?>">
        <?php $_productNameStripped = $this->escapeHtml($product->getName()) ?>
        <?php
          if(iconv_strlen($_productNameStripped,'UTF-8')>20) {
            $_productNameStripped = iconv_substr($_productNameStripped, 0, 20, 'UTF-8');
            $_productNameStripped .= '...';
          }
        ?>
        <?php echo $_productNameStripped ?>
      </a>
    </h2>
  </div>

