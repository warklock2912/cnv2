<?xml version="1.0"?>
<layout version="0.1.0">
	<default>
	</default>
	<ruffle_index_index>
		<reference name="root">
			<action method="setTemplate">
				<template>page/1column.phtml</template>
			</action>
		</reference>
		<reference name="breadcrumbs">
			<action method="addCrumb">
				<crumbName>Home</crumbName>
				<crumbInfo>
					<label>Home</label>
					<title>Home</title>
					<link>/</link>
				</crumbInfo>
			</action>
			<action method="addCrumb">
				<crumbName>Raffle</crumbName>
				<crumbInfo>
					<label>Raffle</label>
					<title>Raffle</title>
				</crumbInfo>
			</action>
		</reference>
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>css/ruffle/styles.css</name>
				<params/>
			</action>
		</reference>
		<reference name="content">
			<block type="ruffle/ruffle" name="ruffle" template="ruffle/ruffle.phtml"/>
		</reference>
		<reference name="footer.before">
			<block type="ruffle/ruffle" name="ruffle.description" template="ruffle/description.phtml"/>
		</reference>
	</ruffle_index_index>
