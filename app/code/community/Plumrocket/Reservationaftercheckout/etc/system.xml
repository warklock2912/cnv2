<?xml version="1.0"?>
<config>
	<sections>
		<reservation_after_checkout  translate="label" module="reservationaftercheckout">
			<label>Reservation after Checkout</label>
			<tab>plumrocket</tab>
			<frontend_type>text</frontend_type>
			<sort_order>1760</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>            
			<groups>
				<general translate="label"> 
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<version translate="label">
		                    <frontend_type>text</frontend_type>
		                    <frontend_model>cartreservation/system_config_version</frontend_model>
		                    <sort_order>10</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
		                </version>
						<enable translate="label">
							<label>Enable Extension</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable>
						<time translate="label">
							<label>Reservation Time</label>
							<frontend_type>time</frontend_type>
							<frontend_model>cartreservation/system_time</frontend_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Time format: <u>Days</u>, <u>Hours</u>, <u>Minutes</u>, <u>Seconds</u>. Select "00" in all fields to set unlimited reservation time &amp; hide timer]]></comment>
						</time>
					</fields>
				</general>
			</groups>
		</reservation_after_checkout>
	</sections>
</config>
