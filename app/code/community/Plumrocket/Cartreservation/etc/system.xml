<?xml version="1.0"?>
<config>
	<tabs>
        <plumrocket>
            <label>
            	<![CDATA[<div style="padding-left:22px; background: url(data:image/png;base64,) left 50% no-repeat;">Plumrocket Inc.</div>]]> 
            </label>
            <sort_order>101</sort_order>
        </plumrocket>
    </tabs>
    
	<sections>
		<cartreservation  translate="label" module="cartreservation">                    
			<label>Cart Reservation</label>
			<tab>plumrocket</tab>
			<frontend_type>text</frontend_type>
			<sort_order>1750</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>            
			<groups>
				<general translate="label"> 
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<version translate="label">
		                    <frontend_type>text</frontend_type>
		                    <frontend_model>cartreservation/system_config_version</frontend_model>
		                    <sort_order>10</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
		                </version>
						<enable translate="label">
							<label>Enable Extension</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</enable>
						<serial translate="label">
                            <label>Serial Key</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>plumbase/system_config_form_field</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[
                                Your can find <strong>Serial Key</strong> in your account at <a target="_blank" href="https://store.plumrocket.com/downloadable/customer/products/">store.plumrocket.com</a>. For manual <a target="_blank" href="http://wiki.plumrocket.com/wiki/License_Installation">click here</a>.
                            ]]></comment>
                        </serial>
						<visibility translate="label">
                            <label>Enable in Store Views</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>cartreservation/values_stores</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </visibility>
						<type translate="label">
							<label>Reservation by User Type</label>
							<frontend_type>select</frontend_type>
							<source_model>cartreservation/values_usertypes</source_model>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Specify if cart/checkout reservation is enabled for registered users only or for guest users as well]]></comment>
						</type>
					</fields>
				</general>
				<cart>
					<label>Shopping Cart</label>
					<frontend_type>text</frontend_type>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<type translate="label">
							<label>Cart Reservation Type</label>
							<frontend_type>select</frontend_type>
							<source_model>cartreservation/values_types</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</type>
						<after_end translate="label">
							<label>When Countdown Timer Ends</label>
							<frontend_type>select</frontend_type>
							<source_model>cartreservation/values_keepincart</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</after_end>
						<time translate="label">
                            <label>Cart Reservation Time</label>
                            <frontend_type>time</frontend_type>
                            <frontend_model>cartreservation/system_time</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Time format: <u>Days</u>, <u>Hours</u>, <u>Minutes</u>, <u>Seconds</u>. Select "00" in all fields to set unlimited reservation time &amp; hide timer]]></comment>
                        </time>
					</fields>
				</cart>
				<checkout>
					<label>Checkout</label>
					<frontend_type>text</frontend_type>
					<sort_order>30</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<timer_behavior translate="label">
                            <label>Checkout Timer Behavior</label>
                            <frontend_type>select</frontend_type>
							<source_model>cartreservation/values_timerbehavior</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </timer_behavior>
						<time translate="label">
                            <label>Checkout Reservation Time</label>
                            <frontend_type>time</frontend_type>
                            <frontend_model>cartreservation/system_time</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Time format: <u>Days</u>, <u>Hours</u>, <u>Minutes</u>, <u>Seconds</u>. Select "00" in all fields to set unlimited reservation time &amp; hide timer]]></comment>
                        </time>
						<timer_display translate="label">
                            <label>Checkout Timer Display</label>
                            <frontend_type>select</frontend_type>
							<source_model>cartreservation/values_timerdisplay</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Please note: countdown will continue even if timer is hidden</comment>
                        </timer_display>
					</fields>
				</checkout>
				<reminders_alert>
					<label>Popup Reminders</label>
					<frontend_type>text</frontend_type>
					<sort_order>40</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<show translate="label">
							<label>Show Reservation Expiration Alert</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Display pop-up message prior to reservation expiration</comment>
						</show>
						<time translate="label">
                            <label>Alert Reminder in</label>
                            <frontend_type>time</frontend_type>
                            <frontend_model>cartreservation/system_time</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Show notification "x" amount of time before reservation ends. Time format: <u>Days</u>, <u>Hours</u>, <u>Minutes</u>, <u>Seconds</u>.]]></comment>
                        </time>
                        <template translate="label">
                            <label>Alert Template</label>
                            <frontend_type>editor</frontend_type>
                            <frontend_model>cartreservation/system_config_alert</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </template>
                    </fields>
                </reminders_alert>

                <reminders_email>
					<label>Email Reminders</label>
					<frontend_type>text</frontend_type>
					<sort_order>50</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
                        <send translate="label">
							<label>Send Reservation Expiration Email</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Send email reminder prior to reservation expiration</comment>
						</send>
						<time translate="label">
                            <label>Email Reminder in</label>
                            <frontend_type>time</frontend_type>
                            <frontend_model>cartreservation/system_time</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Send email notification "x" amount of time before reservation ends. Time format: <u>Days</u>, <u>Hours</u>, <u>Minutes</u>, <u>Seconds</u>.]]></comment>
                        </time>
						<sender_identity translate="label">
                            <label>Expiration Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sender_identity>
						<template translate="label">
                            <label>Expiration Email Template</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </template>
					</fields>
                </reminders_email>

				<format>
					<label>Timer Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>60</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<format translate="label">
                            <label>Countdown Timer Format</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Format of Shopping Cart and Checkout Page Timers</comment>
                        </format>
                        <product_timer_show>
                        	<label>Show reservation countdown on product page</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Display time when at least one unit of product will become unreserved</comment>
                        </product_timer_show>
                        <product_timer_format translate="label">
                            <label>Product Page Timer Format</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_timer_format>
					</fields>
				</format>
			</groups>
		</cartreservation>
	</sections>
</config>
