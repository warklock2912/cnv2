<config>
    <sections>
        <mageworx_searchsuite>
            <groups>
                <autocomplete translate="label" module="mageworx_searchsuiteautocomplete">
                    <label>Autocomplete</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <show_popup translate="label">
                            <label>Show Popup</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_popup>
                        <animation translate="label">
                            <label>Loading Animation</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mageworx_searchsuiteautocomplete/system_config_source_animation</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </animation>
                        <search_delay translate="label">
                            <label>Search Delay</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </search_delay>
                        <highlighting_enabled translate="label">
                            <label>Enable search terms highlighting</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </highlighting_enabled>
                        
                        <show_fields translate="label">
                            <label>Show Fields In Popup</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>mageworx_searchsuiteautocomplete/system_config_source_fields</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_fields>
                        
                        
                        <suggest_results_number translate="label">
                            <label>Number of Results Suggested Search</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </suggest_results_number>
                        
                        <product_results_number translate="label">
                            <label>Number of Results Product Search</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_results_number>  
                        <product_result_fields translate="label">
                            <label>Product Search Result Fields</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>mageworx_searchsuiteautocomplete/system_config_source_product_fields</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_result_fields>
                        <show_product_results_grouped_by_categories translate="label">
                            <label>Show Product Results Grouped By Categories</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_product_results_grouped_by_categories>
                        <product_image_size translate="label">
                            <label>Product Image Size</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_image_size>     

                        <category_fields translate="label">
                            <label>Category Search Result Fields</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>mageworx_searchsuite/system_config_source_category_fields</source_model>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category_fields>
                        <category_thumbnail_size translate="label">
                            <label>Category Thumbnail Size</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category_thumbnail_size>   
                        
                        <cmspage_fields translate="label">
                            <label>CMS Search Result Fields</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>mageworx_searchsuite/system_config_source_cmspage_fields</source_model>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cmspage_fields> 
                        
                        <customizer translate="label">
                            <label>Customize your popup</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>mageworx_searchsuiteautocomplete/adminhtml_system_config_form_field_customizer</frontend_model>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </customizer>                              
                        
                    </fields>
                </autocomplete>
            </groups>
        </mageworx_searchsuite>
    </sections>
</config>