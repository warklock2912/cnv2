<?xml version="1.0"?>
<config>
    <modules>
        <AW_Popup>
            <version>1.3.3</version><platform>ce</platform>
        </AW_Popup>
    </modules>
    <frontend>
        <routers>
            <popup>
                <use>standard</use>
                <args>
                    <module>AW_Popup</module>
                    <frontName>popup</frontName>
                </args>
            </popup>
        </routers>
        <layout>
            <updates>
                <popup>
                    <file>popup.xml</file>
                </popup>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <aw_popup after="Mage_Adminhtml">AW_Popup_Adminhtml</aw_popup>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <cms>
                <children>
                    <popup>
                        <title>Popup management</title>
                        <sort_order>50</sort_order>
                        <children>
                            <add_new>
                                <title>Add new</title>
                                <action>adminhtml/awpopup_popup/new</action>
                                <sort_order>10</sort_order>
                            </add_new>
                            <list_popups>
                                <title>List popups</title>
                                <action>adminhtml/awpopup_popup/index</action>
                                <sort_order>20</sort_order>
                            </list_popups>
                            <settings>
                                <title>Settings</title>
                                <action>adminhtml/system_config/edit/section/popup/</action>
                                <sort_order>30</sort_order>
                            </settings>
                        </children>
                    </popup>
                </children>
            </cms>
        </menu>
        <translate>
            <modules>
                <AW_Popup>
                    <files>
                        <default>AW_Popup.csv</default>
                    </files>
                </AW_Popup>
            </modules>
        </translate>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <cms>
                            <children>
                                <popup translate="title" module="popup">
                                    <title>Popup</title>
                                    <sort_order>150</sort_order>
                                    <children>
                                        <add_new>
                                            <title>Add new</title>
                                        </add_new>
                                        <list_popups>
                                            <title>List popups</title>
                                        </list_popups>
                                        <settings>
                                            <title>Settings</title>
                                        </settings>
                                    </children>
                                </popup>
                            </children>
                        </cms>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <popup>
                                            <title>aheadWorks - Popup</title>
                                        </popup>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <popup>
                    <file>popup.xml</file>
                </popup>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <popup>
                <class>AW_Popup_Model</class>
                <resourceModel>popup_mysql4</resourceModel>
            </popup>
            <popup_mysql4>
                <class>AW_Popup_Model_Mysql4</class>
                <entities>
                    <popup>
                        <table>aw_popup</table>
                    </popup>
                    <stat>
                        <table>aw_popup_stat</table>
                    </stat>
                </entities>
            </popup_mysql4>
        </models>
        <resources>
            <popup_setup>
                <setup>
                    <module>AW_Popup</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </popup_setup>
            <popup_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </popup_write>
            <popup_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </popup_read>
        </resources>
        <blocks>
            <popup>
                <class>AW_Popup_Block</class>
            </popup>
        </blocks>
        <helpers>
            <popup>
                <class>AW_Popup_Helper</class>
            </popup>
        </helpers>
    </global>
    <default>
        <popup>
            <interface>
                <auto_hide>30</auto_hide>
                <default_position>2</default_position>
                <cookies_lifetime>3600</cookies_lifetime>
            </interface>
            <settings>
                <ignore_user_agent><![CDATA[Googlebot
Baidu
Bing
Yandex
Soso
Exabot
Sogou
facebookexternalhit
Feedfetcher-Google]]></ignore_user_agent>
            </settings>
        </popup>
    </default>
</config>
